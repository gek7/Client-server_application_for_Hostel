<Application x:Class="Client_serv.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Client_serv"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="DataGrid">
            <Style.Resources>
                <!-- Цвет заднего фона, когда строка в фокусе -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#CC0530F3" />
                <!-- Цвет текста, когда строка в фокусе -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White" />
                <!-- Цвет заднего фона, когда строка не в фокусе -->
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#CC0530F3" />
                <!-- Цвет текста, когда строка не в фокусе -->
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White" />
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
